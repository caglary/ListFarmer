@model ListFarmerWeb.Models.CiftciListViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <style type="text/css">
        .container {
            width: 600px;
        }
    </style>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        TC Numarası
                    </th>
                    <th>
                        İsim
                    </th>
                    <th>
                        Soyisim
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ciftciler)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Soyisim)
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        isim
                    </th>
                    <th>
                        tutar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MgdTutar)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.isletmeAdi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.toplamDesteklemeMiktari)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{ 
        var date = DateTime.Now - TimeSpan.FromDays(3);
    }
    <h1>
        Now : @DateTime.Now
    </h1>
</body>
</html>
